# Enhanced Weather Configuration
# Add these to your .env file to enable real weather data APIs

# =============================================================================
# WEATHER API CONFIGURATION
# =============================================================================

# OpenWeatherMap API (Free tier: 60 calls/minute, 1000 calls/day)
# Sign up at: https://openweathermap.org/api
# OPENWEATHER_API_KEY=your_api_key_here

# Alternative Weather APIs:
# WeatherAPI.com (Free tier: 1 million calls/month)
# WEATHERAPI_KEY=your_weather_api_key_here

# Visual Crossing Weather (Free tier: 1000 records/day)
# VISUAL_CROSSING_API_KEY=your_visual_crossing_key_here

# =============================================================================
# DELHI WEATHER STATION COORDINATES
# =============================================================================
DELHI_LAT=28.6139
DELHI_LON=77.2090

# Additional weather stations in Delhi NCR for better coverage
DELHI_IGI_LAT=28.5562
DELHI_IGI_LON=77.1000

GURGAON_LAT=28.4595
GURGAON_LON=77.0266

NOIDA_LAT=28.5355
NOIDA_LON=77.3910

# =============================================================================
# WEATHER DATA CONFIGURATION
# =============================================================================

# Enable/disable real weather API calls (set to false to use simulated data)
USE_REAL_WEATHER_API=false

# Weather update frequency (hours)
WEATHER_UPDATE_FREQUENCY=1

# Historical weather data range (days back from current date)
HISTORICAL_WEATHER_DAYS=365

# Weather correlation factors for load forecasting
TEMPERATURE_LOAD_CORRELATION=0.75
HUMIDITY_LOAD_CORRELATION=0.45
PRECIPITATION_LOAD_CORRELATION=-0.25
WIND_LOAD_CORRELATION=-0.15

# =============================================================================
# DELHI CLIMATE PATTERNS (Used for realistic simulation)
# =============================================================================

# Temperature ranges by season (Â°C)
DELHI_WINTER_MIN=2
DELHI_WINTER_MAX=22
DELHI_SUMMER_MIN=20
DELHI_SUMMER_MAX=48
DELHI_MONSOON_MIN=23
DELHI_MONSOON_MAX=38
DELHI_POST_MONSOON_MIN=15
DELHI_POST_MONSOON_MAX=32

# Humidity ranges by season (%)
DELHI_WINTER_HUMIDITY=40-70
DELHI_SUMMER_HUMIDITY=25-50
DELHI_MONSOON_HUMIDITY=60-90
DELHI_POST_MONSOON_HUMIDITY=45-75

# Precipitation patterns (mm/hour)
DELHI_MONSOON_AVG_RAIN=5.2
DELHI_WINTER_AVG_RAIN=0.3
DELHI_SUMMER_AVG_RAIN=0.1
DELHI_POST_MONSOON_AVG_RAIN=0.8

# Wind patterns (km/h)
DELHI_AVG_WIND_SPEED=8.5
DELHI_MAX_WIND_SPEED=45
DELHI_PREDOMINANT_WIND_DIRECTION=315  # NW

# =============================================================================
# WEATHER QUALITY INDICATORS
# =============================================================================

# AQI correlation with weather
ENABLE_AQI_CORRELATION=true
DELHI_AVG_AQI=200
WINTER_AQI_MULTIPLIER=1.8  # Worse air quality in winter
MONSOON_AQI_MULTIPLIER=0.6  # Better air quality during rains

# Dust storm indicators (common in Delhi summer)
ENABLE_DUST_STORM_SIMULATION=true
DUST_STORM_MONTHS=3,4,5,6  # Mar-Jun
DUST_STORM_PROBABILITY=0.15

# Fog indicators (common in Delhi winter)
ENABLE_FOG_SIMULATION=true
FOG_MONTHS=12,1,2  # Dec-Feb
FOG_PROBABILITY=0.3
FOG_VISIBILITY_MIN=0.5  # km

